<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/caard"
    tools:context="com.example.aman.hospitalappointy.SplashScreenActivity">

    <ImageView
        android:id="@+id/logoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textid"
        android:layout_alignEnd="@+id/textid"
        android:layout_alignRight="@+id/textid"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/lo1" />

    <TextView
        android:id="@+id/textid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="246dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Hospital Appointy"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold" />
</LinearLayout>

