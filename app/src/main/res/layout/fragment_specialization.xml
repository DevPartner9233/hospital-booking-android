<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.aman.hospitalappointy.Fragment_Doctor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/search_by_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search By Specialization"
                android:inputType="textPersonName"
                android:maxLength="20" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/doc_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Profile"/>

        <Button
            android:id="@+id/doctor_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Personal"/>

        <Button
            android:id="@+id/doctor_rosterPlan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roaster Plan"/>
        <Button
            android:id="@+id/doctor_editRoasterPlan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Roaster Plan"/>
        <Button
            android:id="@+id/doctor_editProfile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"/>


    </LinearLayout>
</FrameLayout>