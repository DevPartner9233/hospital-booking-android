<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:recyclerviewfastscroller="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.aman.hospitalappointy.Fragment_Doctor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/doctor_recyclerView"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"/>


        <xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
            android:id="@+id/fast_scroller"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            recyclerviewfastscroller:rfs_backgroundColor="#ffffff"
            recyclerviewfastscroller:rfs_textColor="#000000"
            />

    </LinearLayout>

</FrameLayout>